<!doctype html>
<html lang="en" data-bs-theme="dark">
    <head>
        {% block head %}
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block styles %}
            <!-- Bootstrap CSS -->
            {{ bootstrap.load_css() }}
        {% endblock %}

        <title>Sharp Remote</title>
        {% endblock %}
    </head>
    <body>
        {% from 'bootstrap5/nav.html' import render_nav_item %}
        <nav class="navbar navbar-expand-lg">
            <div class="navbar-nav mr-auto">
                {{ render_nav_item('frontend.index', 'Home') }}
                {{ render_nav_item('frontend.control', 'Control') }}
                {{ render_nav_item('frontend.about', 'About') }}
            </div>
        </nav>
        {% block content %}{% endblock %}

        {% block scripts %}
            <!-- Optional JavaScript -->
            {{ bootstrap.load_js() }}
        {% endblock %}
    </body>
</html>
